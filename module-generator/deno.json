{
  "name": "@lexikon/module-generator",
  "version": "0.1.0",
  "exports": "./mod.ts",
  "imports": {
    "@lexikon/module-llm": "../module-llm/mod.ts",
    "std/": "https://deno.land/std@0.220.1/",
    "@std/path": "https://deno.land/std@0.220.1/path/mod.ts",
    "@std/fs": "https://deno.land/std@0.220.1/fs/mod.ts",
    "@std/flags": "https://deno.land/std@0.220.1/flags/mod.ts"
  },
  "tasks": {
    "test": "deno test --allow-env --allow-read",
    "test:watch": "deno test --allow-env --allow-read --watch",
    "test:coverage": "deno test --allow-env --allow-read --coverage=coverage",
    "check": "deno check mod.ts",
    "lint": "deno lint"
  },
  "publish": {
    "exclude": [
      "coverage/",
      "examples/",
      "tests/",
      ".github/",
      "*.test.ts",
      "*.md"
    ]
  }
} 